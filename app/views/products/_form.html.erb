<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :sku %>
    <%= form.text_field :sku %>
  </div>

  <div class="field">
    <%= form.label :batch_size %>
    <%= form.number_field :batch_size %>
  </div>

  <div class="field">
    <%= form.label :unit_type %>
    <%= form.select :unit_type, options_for_select([["Kgs", "Kgs"], ["Units", "Units"]]) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
